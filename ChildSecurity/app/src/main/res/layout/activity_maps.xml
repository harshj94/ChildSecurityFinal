<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="250dp">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="smc.locationonmaps.MapsActivity" />

    </LinearLayout>

    <Button
        android:id="@+id/tracking_button"
        android:layout_below="@+id/map"
        android:text="Tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/map"
        android:id="@+id/reportchildlabor"
        android:text="Report Child Labor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_below="@+id/reportchildlabor"
        android:id="@+id/reportmissing"
        android:text="Report Missing Child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
